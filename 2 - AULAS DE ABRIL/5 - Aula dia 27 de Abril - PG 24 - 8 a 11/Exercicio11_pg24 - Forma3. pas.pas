Program Exercicio11_pg24; //FORMA MAIS OU MENOS

Var
	 cont, numero: integer;

Begin
    Cont := 0;
    write ('Digite um número inteiro: '); Readln (numero);
    writeln;
    
    If (numero mod 2)=1 the
    
       Begin
            NUMERO := NUMERO + 1;
            writeln ('Próximo número: ' , NUMERO)';
            CONT := 1;
       end;
       
    Repeat   
        CONT := CONT + 1;
        NUMERO := NUMERO + 2;
        writeln ('Próximo número: ' , NUMERO)';
    Until CONT=5;
		    
End.